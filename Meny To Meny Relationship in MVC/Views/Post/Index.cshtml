@model IEnumerable<Meny_To_Meny_Relationship_in_MVC.ViewModel.PostViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

@if (User.Identity.IsAuthenticated)
{
    <div>
        <button>
            <a asp-area="" asp-controller="Post" asp-action="Create">Create New</a>
        </button>
    </div>
}
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @if(User.Identity.IsAuthenticated && User.IsInRole("admin"))
                    {
                        <a asp-area="" asp-controller="Post" asp-action="Edit" asp-route-id="@item.Id">Edit</a>

                        <a asp-area="" asp-controller="Post" asp-action="Delete" asp-route-id="@item.Id">Delete</a>

                    }

                    @if (User.Identity.IsAuthenticated)
                    {
                        <a asp-area="" asp-controller="Post" asp-action="Details" asp-route-id="@item.Id">Details</a>
                    }                    
            </td>
        </tr>
}
    </tbody>
</table>
